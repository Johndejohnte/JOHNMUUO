	printf("enter currency\n"); 
	scanf("%f",&curency);
	if (curency==1)
	{
		printf("enter ksh amount");
		scanf("%f",&a);
		b=a/102.20;
		printf("%f",b);
	}
	else if(curency==2)
		{
		printf("enter ksh amount");
		scanf("%f",&a);
		c=a/116.30;
		printf("%f",c);
	}
		else if(curency==3)
		{
		printf("enter ksh amount");
		scanf("%f",&a);
		d=a/0.20;
		printf("%f",d);
	}
		else if(curency==4)
		{
		printf("enter ksh amount");
		scanf("%f",&a);
		e=a/0.55;
		printf("%f",e);
	}
	else
	{
		printf("ivalid curency");
